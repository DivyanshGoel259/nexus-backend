# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
NODE_ENV=development

# JWT Secrets (IMPORTANT: Use strong, unique secrets in production)
JWT_SECRET=your-strong-secret-key-for-access-tokens
JWT_REFRESH_SECRET=your-strong-secret-key-for-refresh-tokens

# Redis Configuration
# Option 1: Use Redis URL (Recommended - jo aapko mila hai)
REDIS_URL=redis://username:password@hostname:port/db

# Option 2: Individual credentials (Fallback if REDIS_URL not provided)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Twilio Configuration (for OTP via Twilio Verify API)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SID=your_twilio_verify_service_sid

# Server Configuration
PORT=3000

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

